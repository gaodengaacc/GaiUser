<resources>

    <style name="AppBaseTheme" parent="LibTheme"></style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.NoTitle" parent="LibTheme.NoTitle"></style>

    <style name="AppTheme.NoTitle.FullScreen" parent="LibTheme.NoTitle.FullScreen"></style>

    <style name="GlobalTitleTheme" parent="@style/AppTheme.NoTitle">
        <item name="android:windowTitleSize">48dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/app_custom_title_bg_style</item>
        <item name="android:windowTitleStyle">@style/app_custom_title_style</item>
    </style>

    <style name="app_custom_title_bg_style">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="app_custom_title_style">
        <item name="android:background">@color/bgcB</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_margin">@dimen/title_margin</item>
    </style>

    <!--"我"的界面item -->
    <style name="main_fragment_discover_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_item_bg_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:drawableRight">@mipmap/item_right_icon</item>
    </style>
    <!-- 语言选择对话框样式 -->
    <style name="LanguageChioceDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
