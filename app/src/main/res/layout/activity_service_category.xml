<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.lyun.user.viewmodel.ServiceCategoryActivityViewModel"></import>

        <variable
            name="mvvm"
            type="ServiceCategoryActivityViewModel"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_normalService"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.normalServiceRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_normalService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="普通服务" />

            <ImageView
                android:id="@+id/imageView_normalService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityNormalService}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_travel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.travelRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="出行" />

            <ImageView
                android:id="@+id/imageView_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityTravel}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_hotel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.hotelRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="酒店入住" />

            <ImageView
                android:id="@+id/imageView_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityHotel}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_shopping"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.shoppingRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="购物" />

            <ImageView
                android:id="@+id/imageView_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityShopping}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_eat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.eatRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="吃饭" />

            <ImageView
                android:id="@+id/imageView_eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityEat}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />

        <RelativeLayout
            android:id="@+id/relativeLayout_urgency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{mvvm.urgencyRelativeLayoutClick}">

            <TextView
                android:id="@+id/textView_urgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="紧急情况" />

            <ImageView
                android:id="@+id/imageView_urgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/choise"
                android:visibility="@{mvvm.visibilityUrgency}" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55d9d9d9" />
    </LinearLayout>

</layout>