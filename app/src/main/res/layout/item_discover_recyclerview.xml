<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_discoverRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@mipmap/image1" />

    <TextView
        android:id="@+id/textView_title_discoverRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一篇关于英国的指南"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView_content_discoverRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="在英国可以感受西方文化,她,迷人又多面!"
        android:textColor="#d9d9d9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"></View>
</LinearLayout>