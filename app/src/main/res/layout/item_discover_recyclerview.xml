<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import
            type="com.lyun.user.viewmodel.DiscoverRecyclerItemViewModel">
        </import>
        <import type="com.lyun.user.model.DiscoverFragmentItemModel"></import>
        <variable
            name="itemData"
            type="DiscoverRecyclerItemViewModel"></variable>
        <variable
            name="itemModel"
            type="DiscoverFragmentItemModel"></variable>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg_selector"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        app:imageUrl="@{itemData.imageId}"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{itemData.listTitle}"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@{itemData.listContent}"
        android:textColor="#d9d9d9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"></View>
</LinearLayout>
</layout>