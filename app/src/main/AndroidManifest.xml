<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyun.user">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoTitle.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/GlobalTitleTheme">
            <intent-filter>
                <action android:name="com.lyun.user.intent.action.LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ServiceCategoryActivity"
            android:theme="@style/GlobalTitleTheme">
            <intent-filter>
                <action android:name="com.lyun.user.intent.action.SERVICE_CATEGORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserSettingActivity"
            android:theme="@style/GlobalTitleTheme">
            <intent-filter>
                <action android:name="com.lyun.user.intent.action.USER_SETTING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WalletMainActivity"
            android:theme="@style/GlobalTitleTheme">
            <intent-filter>
                <action android:name="com.lyun.user.intent.action.WALLET_MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WalletChargeActivity"
            android:theme="@style/GlobalTitleTheme">
            <intent-filter>
                <action android:name="com.lyun.user.intent.action.WALLET_CHARGE" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>